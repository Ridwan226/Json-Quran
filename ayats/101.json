          "body_ayat_ltn_in_html": "faummuhu h<u>aa</u>wiya<strong>tun</strong>",
          "invers_tajweed": "فَأُ[g[مّ]ُهُ[n[ۥ] هَاوِيَةٌ",
          "translation_id": "maka tempat kembalinya adalah neraka Hawiyah.",
          "translation_en": "His refuge will be an abyss.",
          "audio_praimary": "https://cdn.alquran.cloud/media/audio/ayah/ar.alafasy/6166",
          "audio_secondary": "https://cdn.islamic.network/quran/audio/128/ar.alafasy/6166.mp3",
          "tafsir_short": "maka tempat kembalinya adalah neraka Hawiyah."
        },
        {
          "id": 6167,
          "surat_id": 101,
          "jus": 30,
          "ruku": 543,
          "no_ayat_inquran": 6167,
          "no_ayat_insurat": 10,
          "body_ayat_arb": "وَمَآ اَدْرٰىكَ مَا هِيَهْۗ",
          "body_ayat_ltn_en": "Wa maa adraaka maa hiyah",
          "body_ayat_ltn_in": "wamaa adraaka maa hiyah",
          "body_ayat_ltn_in_html": "wam<u>aa</u> adr<u>aa</u>ka m<u>aa</u> hiya<strong>h</strong>",
          "invers_tajweed": "وَم[o[َآ] أَ[q:13858[دْ]رَ[n[ٮٰ]كَ مَا هِيَهْ",
          "translation_id": "Dan tahukah kamu apakah neraka Hawiyah itu?",
