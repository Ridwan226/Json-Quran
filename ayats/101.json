          "tafsir_short": "Hari kiamat yang mengerikan;"
        },
        {
          "id": 6159,
          "surat_id": 101,
          "jus": 30,
          "ruku": 543,
          "no_ayat_inquran": 6159,
          "no_ayat_insurat": 2,
          "body_ayat_arb": "مَا الْقَارِعَةُ ۚ",
