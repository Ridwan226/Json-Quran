        {
          "id": 6166,
          "surat_id": 101,
          "jus": 30,
          "ruku": 543,
          "no_ayat_inquran": 6166,
          "no_ayat_insurat": 9,
          "body_ayat_arb": "فَاُمُّهٗ هَاوِيَةٌ  ۗ",
